{
  "name": "bbpad",
  "version": "0.1.0",
  "description": "A LINQPad-inspired desktop app for Babashka scripts",
  "private": true,
  "scripts": {
    "dev": "cd bbpad-ui && npm run dev",
    "build": "cd bbpad-ui && npm run build",
    "test": "cd bbpad-ui && npm run lint",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "clean": "rimraf bbpad-ui/dist target",
    "install-ui": "cd bbpad-ui && npm install",
    "postinstall": "npm run install-ui && playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "babashka",
    "clojure",
    "desktop",
    "scripting",
    "linqpad"
  ],
  "author": "Kay Bosompem",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kbosompem/bbpad.git"
  },
  "bugs": {
    "url": "https://github.com/kbosompem/bbpad/issues"
  },
  "homepage": "https://github.com/kbosompem/bbpad#readme"
}